# WisePick Server Environment Variables
# Copy this file to .env and fill in your values
# WARNING: Do NOT commit .env to version control!

# ============================================
# Database Configuration (PostgreSQL)
# Required for user authentication features
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wisepick
DB_USER=postgres
DB_PASSWORD=your_database_password

# ============================================
# JWT Configuration
# Change these in production!
# ============================================
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# ============================================
# Email Service (for verification codes)
# Optional - email verification disabled if not set
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# ============================================
# E-commerce Platform APIs
# ============================================

# 淘宝联盟
TAOBAO_APP_KEY=your_taobao_app_key
TAOBAO_APP_SECRET=your_taobao_app_secret
TAOBAO_ADZONE_ID=your_taobao_adzone_id

# 京东联盟
JD_APP_KEY=your_jd_app_key
JD_APP_SECRET=your_jd_app_secret
JD_UNION_ID=your_jd_union_id

# 拼多多联盟
PDD_CLIENT_ID=your_pdd_client_id
PDD_CLIENT_SECRET=your_pdd_client_secret
PDD_PID=your_pdd_pid

# ============================================
# OpenAI API (for AI chat features)
# ============================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# ============================================
# Server Configuration
# ============================================
PORT=9527
BACKEND_BASE=http://localhost:9527
ADMIN_PASSWORD=your_admin_password
